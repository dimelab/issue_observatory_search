# Application Configuration
APP_NAME="Issue Observatory Search"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/issue_observatory
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Celery Configuration (optional, uses Redis by default)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# External API Keys
# Search Engines (choose one or both)
SERPER_API_KEY=your-serper-api-key  # Serper.dev - $2 per 1k searches (recommended)
GOOGLE_CUSTOM_SEARCH_API_KEY=your-google-api-key  # Google - $5 per 1k searches
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-search-engine-id

# OpenAI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
OLLAMA_BASE_URL=http://localhost:11434

# File Storage
FILE_STORAGE_PATH=./data/exports

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_SEARCH_PER_MINUTE=10
RATE_LIMIT_SCRAPE_PER_MINUTE=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
